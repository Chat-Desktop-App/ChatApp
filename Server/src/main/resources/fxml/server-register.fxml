                    <children>
                        <VBox prefHeight="23.0" prefWidth="311.0">
                            <children>
                                <Label text="First name" VBox.vgrow="ALWAYS">
                                    <VBox.margin>
                                        <Insets />
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="firstNameField" styleClass="textFieldStyle" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>
                        <VBox layoutX="10.0" layoutY="10.0" prefHeight="23.0" prefWidth="311.0">
                            <children>
                                <Label styleClass="fieldLabelStyle" text="Last name" VBox.vgrow="ALWAYS">
                                    <VBox.margin>
                                        <Insets />
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="lastNameField" styleClass="textFieldStyle" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>
