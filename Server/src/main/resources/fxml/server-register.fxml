                                <Label text="Gender" />
                                <ChoiceBox fx:id="genderChoiceBox" prefHeight="26.0" prefWidth="92.0" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <VBox layoutX="60.0" layoutY="95.0" prefHeight="23.0" prefWidth="311.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label styleClass="fieldLabelStyle" text="Email" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="emailField" styleClass="textFieldStyle" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
                <VBox layoutX="60.0" layoutY="192.0" prefHeight="23.0" prefWidth="311.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label styleClass="fieldLabelStyle" text="Password" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </Label>
                        <PasswordField fx:id="passwordField" styleClass="textFieldStyle" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
                <VBox prefHeight="23.0" prefWidth="311.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label styleClass="fieldLabelStyle" text="Confirmation Password" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </Label>
                        <PasswordField fx:id="confirmPasswordField" styleClass="textFieldStyle" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
                <VBox prefHeight="10.0" prefWidth="360.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Button fx:id="nextButton" onAction="#goToSignIn" alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="358.0" styleClass="buttonStyle" text="Next" VBox.vgrow="ALWAYS"  HBox.hgrow="ALWAYS">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </children>
            <HBox.margin>
                <Insets />
            </HBox.margin>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding></VBox>
    </children>
