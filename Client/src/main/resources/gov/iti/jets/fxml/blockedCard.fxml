<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane minWidth="150.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gov.iti.jets.view.BlockedCardController">
   <children>
      <ImageView fx:id="friendIcon" fitHeight="40.0" fitWidth="40.0" layoutY="3.0" AnchorPane.leftAnchor="0.0">
         <image>
            <Image url="@../images/friendIcon.png" />
         </image>
      </ImageView>
      <Label fx:id="friendName" layoutX="50.0" layoutY="12.0" text="Omer" AnchorPane.leftAnchor="50.0">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <ImageView fx:id="blockedIcon" fitHeight="15.0" fitWidth="15.0" layoutX="33.0" layoutY="23.0" AnchorPane.leftAnchor="30.0">
         <image>
            <Image url="@../images/blocked-icon.png" />
         </image>
      </ImageView>
      <Button fx:id="unblockButton" layoutX="431.0" layoutY="12.0" mnemonicParsing="false" onAction="#handleUnblockButton" prefHeight="25.0" prefWidth="25.0" styleClass="unblock_button" stylesheets="@../styles/blocked.css" AnchorPane.rightAnchor="0.0" />
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</AnchorPane>
