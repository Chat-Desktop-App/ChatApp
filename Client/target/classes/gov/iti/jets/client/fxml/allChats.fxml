<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gov.iti.jets.client.view.AllChatsController">
   <children>
      <ImageView fx:id="friendIcon" fitHeight="40.0" fitWidth="40.0" HBox.hgrow="NEVER">
         <image>
            <Image url="@../images/person.png" />
         </image>
      </ImageView>
      <Label fx:id="friendName" text="Alyaa" HBox.hgrow="NEVER">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Pane HBox.hgrow="ALWAYS" />
      <Label fx:id="messageCounter" styleClass="messageCounter" stylesheets="@../styles/allChats.css" text="2" HBox.hgrow="NEVER" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
